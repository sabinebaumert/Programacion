// calcular raices.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include "conio.h"
#include "math.h"
#include <iostream>

using namespace std;



void main()
{float a, b, c, x1, x2, Dis;
cout<< "Ingrese valor a: " ;
cin>> a;
if (a==0)
   cout<< "error";
else
{
  cout<< "Ingrese valor b: " ;
  cin>> b;
  cout<< "Ingrese valor c: " ;
  cin>> c;

  Dis=pow(b,2)-4*a*c ;
  
   if(Dis>0)
     {x1=(-b+sqrt(Dis))/(2*a) ;
      x2=(-b-sqrt(Dis))/(2*a) ;
	  cout<< "la raiz x1= "<<x1<<",x2= "<<x2<< ;
     }else
		 if(Dis<0)
          {x1=(-b+sqrt(Dis))/(2*a) ;
           x2=(-b-sqrt(Dis))/(2*a) ;
		   cout<< "la raiz x1= "<<x1<<",x2= "<<x2<< ;
	      }


	   
}
  getch();
	
}
